{% extends 'base.html.twig' %}

{% block title %}Hello UserManagerController!{% endblock %}
{%  block javascripts %}
    {% block importmap %}
        {{ importmap(['app', 'search']) }}
    {% endblock %}
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-12">
        <h1>User Manager</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Email
                        <input type="text" id="search" class="form-control" placeholder="Search">
                    </th>
                    <th>Roles</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="userTable">
                {% for user in users %}
                    <tr>
                        <td>{{ user.email }}</td>
                        <td>{{ user.roles|join(', ') }}</td>
                        <td>
                            <a href="{{ path('app_user_manager_change_role', {'id': user.id}) }}" class="btn btn-primary">Edit</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
